    { "code": 6003, "name": "GroupNameTooShort", "msg": "Group name too short" },
    { "code": 6008, "name": "NotInGroup", "msg": "Not in group" },
    { "code": 6014, "name": "InsufficientPermissions", "msg": "Insufficient permissions" }
  ],
