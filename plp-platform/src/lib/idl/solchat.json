{
  "version": "0.1.0",
  "name": "solchat",
  "constants": [
    {
      "name": "USER_SEED",
      "type": "string",
      "value": "\"user\""
    },
    {
      "name": "GROUP_SEED",
      "type": "string",
      "value": "\"group\""
    }
  ],
  "instructions": [
    {
      "name": "initializeUser",
      "accounts": [
        { "name": "user", "isMut": true, "isSigner": false },
        { "name": "owner", "isMut": true, "isSigner": true },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        { "name": "rsaPublicKey", "type": { "array": ["u8", 216] } },
        { "name": "username", "type": "string" }
      ]
    },
    {
      "name": "createGroup",
      "accounts": [
        { "name": "group", "isMut": true, "isSigner": false },
        { "name": "owner", "isMut": true, "isSigner": true },
        { "name": "user0", "isMut": true, "isSigner": false },
        { "name": "user1", "isMut": true, "isSigner": false },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        { "name": "groupId", "type": "u64" },
        { "name": "groupName", "type": "string" },
        { "name": "isDm", "type": "bool" },
        { "name": "members", "type": { "vec": "publicKey" } },
        { "name": "encryptedUserKeys", "type": { "vec": { "array": ["u8", 128] } } }
      ]
    },
    {
      "name": "addUserToGroup",
      "accounts": [
        { "name": "group", "isMut": true, "isSigner": false },
        { "name": "userAcc", "isMut": true, "isSigner": false },
        { "name": "signer", "isMut": true, "isSigner": true },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        { "name": "groupId", "type": "u64" },
        { "name": "user", "type": "publicKey" },
        { "name": "encryptedUserKey", "type": { "array": ["u8", 128] } }
      ]
    },
    {
      "name": "sendMessage",
      "accounts": [
        { "name": "group", "isMut": true, "isSigner": false },
        { "name": "signer", "isMut": true, "isSigner": true },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        { "name": "groupId", "type": "u64" },
        { "name": "encryptedMessage", "type": "bytes" },
        { "name": "iv", "type": { "array": ["u8", 16] } }
      ]
    },
    {
      "name": "acceptChat",
      "accounts": [
        { "name": "userAcc", "isMut": true, "isSigner": false },
        { "name": "signer", "isMut": true, "isSigner": true },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        { "name": "group", "type": "publicKey" }
      ]
    },
    {
      "name": "leaveChat",
      "accounts": [
        { "name": "userAcc", "isMut": true, "isSigner": false },
        { "name": "signer", "isMut": true, "isSigner": true },
        { "name": "systemProgram", "isMut": false, "isSigner": false }
      ],
      "args": [
        { "name": "group", "type": "publicKey" }
      ]
    }
  ],
  "accounts": [
    {
      "name": "Group",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "owner", "type": "publicKey" },
          { "name": "isDm", "type": "bool" },
          { "name": "groupName", "type": "string" },
          { "name": "groupId", "type": "u64" },
          { "name": "members", "type": { "vec": "publicKey" } },
          { "name": "messageIdCounter", "type": "u64" },
          { "name": "defaultPermissions", "type": { "defined": "UserPermissions" } },
          { "name": "userPermissions", "type": { "vec": { "defined": "UserPermissions" } } },
          { "name": "encryptedUserKeys", "type": { "vec": { "vec": { "array": ["u8", 128] } } } },
          { "name": "messages", "type": { "vec": { "defined": "Message" } } }
        ]
      }
    },
    {
      "name": "User",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "owner", "type": "publicKey" },
          { "name": "rsaPublicKey", "type": { "array": ["u8", 216] } },
          { "name": "username", "type": "string" },
          { "name": "chats", "type": { "vec": "publicKey" } },
          { "name": "acceptedChats", "type": { "vec": "publicKey" } }
        ]
      }
    }
  ],
  "types": [
    {
      "name": "Message",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "sender", "type": "publicKey" },
          { "name": "encryptedMessage", "type": "bytes" },
          { "name": "iv", "type": { "array": ["u8", 16] } },
          { "name": "timestamp", "type": "i64" },
          { "name": "version", "type": "u64" },
          { "name": "messageId", "type": "u64" }
        ]
      }
    },
    {
      "name": "UserPermissions",
      "type": {
        "kind": "struct",
        "fields": [
          { "name": "sendMessages", "type": "bool" },
          { "name": "addUsers", "type": "bool" },
          { "name": "removeUsers", "type": "bool" },
          { "name": "changePermissions", "type": "bool" },
          { "name": "changeName", "type": "bool" },
          { "name": "deleteMessages", "type": "bool" }
        ]
      }
    }
  ],
  "errors": [
